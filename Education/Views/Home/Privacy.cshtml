@{
    ViewData["Title"] = "Privacy Policy & Terms & Conditions";
}
@section Styles{

<!-- FONT AWESOME -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<link href="~/css/home/privacy.css" rel="stylesheet" />
}

<div class="container-fluid m-0 p-0 mt-0">
    <div class="container pt-4 pb-4">
    <h1 class="page-title">Privacy Policy & Terms & Conditions</h1>

    <!-- CENTERED SCROLLING TEXT (MARQUEE) -->
    <div style="display:flex; justify-content:center;">
        <marquee class="marq" behavior="scroll" direction="left" scrollamount="6">
            🔐 Your Privacy is Important | 📜 Read Terms Carefully | 💬 Contact Support for Any Help
        </marquee>
    </div>

    <div class="main-wrapper">

        <!-- PRIVACY SECTION -->
        <h2><i class="fa-solid fa-shield-halved"></i>Privacy Policy</h2>
        <p>
            We deeply respect your privacy. This page explains how we collect, protect,
            and use your personal information whenever you interact with our website.
        </p>

        <h4>Information We Collect</h4>
        <p>We may collect your name, email, phone number, and usage details.</p>

        <h4>How We Use Your Data</h4>
        <ul>
            <li>To provide and improve our services</li>
            <li>To communicate important updates</li>
            <li>To keep our system secure</li>
        </ul>

        <h4>Data Security</h4>
        <p>We use advanced security methods to keep your data safe.</p>

        <h4>Cookies Usage</h4>
        <p>We use cookies to personalize your experience.</p>

        <div class="divider"></div>

        <!-- TERMS SECTION -->
        <h2><i class="fa-solid fa-file-contract"></i>Terms & Conditions</h2>
        <p>
            By using our website, you agree to follow all rules and conditions mentioned below.
        </p>

        <h4>1. Acceptance of Terms</h4>
        <p>You must follow all guidelines when using our website.</p>

        <h4>2. User Responsibilities</h4>
        <ul>
            <li>You must not misuse or damage the site</li>
            <li>Provide correct information whenever required</li>
            <li>Avoid attempting unauthorized access</li>
        </ul>

        <h4>3. Limitation of Liability</h4>
        <p>We are not responsible for losses caused by misuse.</p>

        <h4>4. Policy Updates</h4>
        <p>We may update these terms at any time.</p>

        <div class="divider"></div>

        <!-- REFUND POLICY -->
        <h2><i class="fa-solid fa-rotate-left"></i>Refund Policy</h2>
        <p>
            Refunds apply only to eligible products/services. Digital items are non-refundable after delivery.
        </p>

        <h4>Refund Conditions</h4>
        <ul>
            <li>Refund request must be raised within 7 days</li>
            <li>Payment proof is required</li>
            <li>Non-refundable items are excluded</li>
        </ul>

        <div class="divider"></div>

        <!-- DISCLAIMER -->
        <h2><i class="fa-solid fa-circle-info"></i>Disclaimer</h2>
        <p>
            All content on this site is provided for general information.
            We do not guarantee accuracy or completeness.
        </p>

        <p>
            For any queries, contact:<br>
            <strong>support@yourwebsite.com</strong>
        </p>

    </div>
    </div>
</div>
