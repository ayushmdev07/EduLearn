@model Education.Models.UserClass
@{
    ViewData["Title"] = "Login";
}

@section Styles{
    <link href="~/css/authentication/login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

}
@if (TempData["invalid"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @TempData["invalid"]
    </div>
}
@if (TempData["regMsg"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["regMsg"]
    </div>
}
@if (TempData["success"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["success"]
    </div>
}
<div class="row w-100 mx-auto justify-content-center mt-5 mb-3 ">
    <div class="col-lg-4 col-md-6 col-sm-10 shadow rounded-3 overflow-hidden bg-white p-4 p-md-5">

        <!-- Login Section -->
        <h2 class="text-center mb-4 fw-bold">Login</h2>

        <form asp-action="Login" asp-controller="Authentication" method="post">

            <!-- Username -->
            <div class="mb-3">
                <input type="text" name="NameorEmail" class="form-control" placeholder="Username or Email" />
                
            </div>

            <!-- Password -->
            <div class="mb-3">
                <input type="password" name="pass" class="form-control" placeholder="Password" />
            </div>

            <!-- Submit -->
            <button type="submit" class="btn w-100" id="register">Login</button>
        </form>
            <!-- Remember & Forgot -->
            <div class="d-flex justify-content-between align-items-center mb-3 mt-2">
          
                <a asp-action="ForgetPassword" asp-controller="ResetPassword" class="text-primary text-decoration-none small">Forgot Password?</a>
            </div>
            <!-- Social login -->
            <p class="text-center mt-3 mb-2 text-secondary">Our social media platforms</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="text-dark"><i class="fab fa-google fa-lg"></i></a>
                <a href="#" class="text-dark"><i class="fab fa-instagram fa-lg"></i></a>
                <a href="#" class="text-dark"><i class="fab fa-linkedin fa-lg"></i></a>
                <a href="#" class="text-dark"><i class="fab fa-facebook fa-lg"></i></a>
            </div>

            <p class="text-center mt-4 mb-0">
                Don't have an account?
                <a asp-action="Register" asp-controller="Authentication" class="text-primary text-decoration-none fw-semibold">Register</a>
            </p>

        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

