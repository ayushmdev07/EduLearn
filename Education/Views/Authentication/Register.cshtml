@model Education.Models.UserClass
@{
    ViewData["Title"] = "Register";
}
@section Styles{
    <link href="~/css/authentication/registration.css" rel="stylesheet" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        @TempData["Error"]
    </div>
}

<div class="row w-100 justify-content-center mx-auto mt-5 mb-4">
    <div class="col-lg-6 col-md-8 col-sm-11 shadow rounded-3 overflow-hidden bg-white p-4 p-md-5">

        
        <h2 class="text-center mb-4 fw-bold">Registration</h2>

        <!-- FORM START -->
        <form method="post" asp-action="Register" asp-controller="Authentication" enctype="multipart/form-data">

            <div class="row g-3">
                <div class="col-md-6">
                    @* <label asp-for="UserFullName" class="form-label fw-semibold"></label> *@
                    <input asp-for="UserFullName" class="form-control" placeholder="Full Name" />
                    <span asp-validation-for="UserFullName" class="text-danger"></span>
                </div>

                <div class="col-md-6">

                    <input asp-for="UserDOB" type="date" class="form-control" placeholder="Date-of-Birth" />
                    <span asp-validation-for="UserDOB" class="text-danger"></span>
                </div>

                <div class="col-md-6">

                    <input asp-for="UserEmail" class="form-control" placeholder="Email" />
                    <span asp-validation-for="UserEmail" class="text-danger"></span>
                </div>

                <div class="col-md-6">

                    <input asp-for="UserName" class="form-control" placeholder="Username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="col-md-6">

                    <input asp-for="UserPassword" type="password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="UserPassword" class="text-danger"></span>
                </div>

                <div class="col-md-6">

                    <input asp-for="UserConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="UserConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <!-- Image Upload -->
            @* <div class="mt-4"> *@
            @*     <label asp-for="UserImage" class="form-label fw-semibold">Upload Profile Image</label> *@
            @*     <input asp-for="UserImage" type="file" name="ProfileImage" class="form-control" accept="image/*"> *@
            @*     <span asp-validation-for="UserImage" class="text-danger"></span> *@
            @* </div> *@

            <!-- CAPTCHA -->
            <div class="mt-4">
                @* <label class="form-label fw-semibold">Enter CAPTCHA</label> *@
                <div class="d-flex align-items-center gap-3">
                    <input type="text" name="CaptchaInput" class="form-control" placeholder="Enter CAPTCHA" required>
                    <button type="button" class="btn" id="login" style="border:none !important; " onclick="reloadCaptcha()"><i class="fa-2x fa-solid fa-arrows-rotate"></i></button>
                    <img src="/Captcha/Generate" id="captchaImg" alt="CAPTCHA" class="rounded">
                    <p class="@(TempData["capMsg"] == "Captcha Verified!" ? "text-success" : "text-danger")">@TempData["capMsg"]</p>
                </div>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn w-100 mt-4" id="register">Register</button>

            <!-- Social -->
            <p class="text-center mt-3 mb-2 text-secondary">Our social media platforms</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="text-dark"><i class="fab fa-google fa-lg"></i></a>
                <a href="#" class="text-dark"><i class="fab fa-instagram fa-lg"></i></a>
                <a href="#" class="text-dark"><i class="fab fa-linkedin fa-lg"></i></a>
                <a href="#" class="text-dark"><i class="fab fa-facebook fa-lg"></i></a>
            </div>
            <p class="text-center mt-4 mb-0">
                Already have an account?
                <a asp-action="Login" asp-controller="Authentication" class="text-primary text-decoration-none fw-semibold">Login</a>
            </p>
        </form>
        <!-- FORM END -->

    </div>
</div>
@section Scripts {
    <script>
        function reloadCaptcha() {
            document.getElementById("captchaImg").src = "/Captcha/Generate?rand=" + Math.random();
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}