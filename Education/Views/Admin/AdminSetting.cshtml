@model Education.Models.Admin
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = "_AdminSidebar";
    ViewData["Title"] = "AdminSetting";
}
@{
    var Aid = HttpContextAccessor.HttpContext.Session.GetInt32("AdminId");
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}




<h1 class="mb-4"> Update Your Details </h1>



<hr class="">

<div class="row m-0">
    <div class="col-md-12">
        <!-- here is the admin edit  -->
        <div class="profile-card">
            <form asp-action="AdminAccountUpdate" asp-controller="Admin" method="post" enctype="multipart/form-data">

            <!-- Header -->
            <div class="profile-header mb-4">
                <div class="profile-left">
                
                            <img src="/Admin/AdminSettingImageShow?FileName=@Model.AdminImage"
                         class="rounded-circle"
                         style="width: 100px; height: 100px; object-fit: cover;"
                         alt="@Model.AdminName">
                
    
                    <div class="profile-name">
                        <h5>@Model.AdminName</h5>
                        <small>@Model.AdminEmail</small>
                    </div>
                </div>

                <button class="btn btn-success">Save</button>
            </div>

            <!-- Form -->
            <div class="row g-4">

          
                    <input type="hidden" class="form-control" name="AdminID" value="@Model.AdminId">
                
                <div class="col-md-6">
                    <label class="form-label">Full Name</label>
                    <input type="text" class="form-control" name="AdminName" value="@Model.AdminName">
                </div>
               

                <div class="col-md-6">
                    <label class="form-label">DOB</label>
                    <input type="date" class="form-control" name="AdminDOB" value="@Model.AdminDOB">
                </div>

                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="AdminEmail" value="@Model.AdminEmail">
                </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone No.</label>
                        <input type="text" class="form-control" name="AdminPhone" value="@Model.AdminPhone">
                    </div>

                <div class="col-md-6">
                    <label class="form-label">Image</label>
                    <input type="file" class="form-control" name="AdminImage" value="@Model.AdminImage">
                </div>

            </div>
                </form>

            <!-- Email Section -->
            <h6 class="section-title">My email Address</h6>

            <div class="email-box mt-2">
                <div class="email-icon">
                    <i class="bi bi-envelope-fill"></i>
                </div>
                <div>
                    <strong>@Model.AdminEmail</strong><br>
                    <small>@Model.AdminRegisterDate</small>
                </div>
            </div>


            <button type="button" class="btn btn-sm mt-3 btn-outline-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#deleteModal_@Model.AdminId">
                Delete Account
            </button>

             
            <div class="modal fade" id="deleteModal_@Model.AdminId" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title">Confirm Delete</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                        </div>
                        <form asp-action="AdminAccountDelete" asp-controller="Admin" method="post">
                            <div class="modal-body">
                                <input type="hidden" name="AdminId" value="@Model.AdminId" />
                                <p>Are you sure you want to delete <strong>@Model.AdminName</strong>?</p>
                                <p class="text-danger">This action cannot be undone!</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>



        </div>

    </div>
</div>