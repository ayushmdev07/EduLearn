@model IEnumerable<Education.Models.FeedbackClass>
@{
    Layout = "_AdminSidebar";
    ViewData["Title"] = "Feedback";
}


<div class="container">
    <h1 class="mb-4">Admin Dashboard / Feedback</h1>

    <div class="row g-3">


        <div class="col-md-4">
            <a href="./student.html" class="text-decoration-none">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title mb-1">Students</h5>
                        <h2 class="display-4 mb-0 mt-4">83</h2>
                        <p class="card-text mb-0"><i class="bi bi-people-fill me-2"></i>Manage Student</p>
                    </div>
                </div>
            </a>
        </div>



        <div class="col-md-4">
            <a href="./teacher.html" class="text-decoration-none text-dark">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Teachers</h5>
                        <h2 class="display-4 mb-0 mt-4">83</h2>
                        <p class="card-text"><i class="bi bi-people-fill me-2"></i>Manage Teacher</p>
                    </div>
                </div>
            </a>
        </div>


        <div class="col-md-4">
            <a href="./course.html" class="text-decoration-none text-dark">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Courses</h5>
                        <h2 class="display-4 mt-4 mb-0">83</h2>
                        <p class="card-text"><i class="bi bi-people-fill me-2"></i>Manage Course</p>
                    </div>
                </div>
            </a>
        </div>


    </div>

    <hr>


    <!-- Feedbacks -->
    <!-- Feedbacks -->
    <div class="row g-3 border rounded p-4 mt-2 bg-white">
        <h2 class="text-primary mb-2">
            <i class="bi bi-chat-dots-fill me-2"></i>Feedback History
        </h2>
        <p class="text-muted">All user feedbacks are listed below</p>

        <div class="table-responsive rounded-3 overflow-auto shadow">
            <table class="table table-bordered table-hover align-middle mt-4">
                <thead class="table-info text-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Course Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Feedback</th>
                        <th scope="col">Rating</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach( var feedbacks in Model){

                    <tr>
                        <th>@feedbacks.FeedbackId</th>
                        <td>Not avilable</td>
                        <td>@feedbacks.FeedbackEmail</td>
                        <td>@feedbacks.FeedbackMessage</td>
                        <td style="color:#ffb400;">★★★★★</td>
                        <td>@feedbacks.FeedbackDate</td>
                    </tr>
                    }
                  
                </tbody>
            </table>
        </div>
    </div>
    <!-- Feedback end -->
    <!-- Feedback end -->













</div>