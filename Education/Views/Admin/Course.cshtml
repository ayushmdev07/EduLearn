                        <h5 class="modal-title">Update Admin</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="UpdateCourse" asp-controller="Admin" method="post" enctype="multipart/form-data">
