                            <input type="hidden" name="CourseId" value="@courses.CourseId" />

                            <div class="mb-3">
                                <label class="form-label">Course Name</label>
                                <input type="text" class="form-control" name="CourseName" value="@courses.CourseName" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Course Price</label>
                                <input type="number" class="form-control" name="CoursePrice" value="@courses.CoursePrice" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Course Start Date</label>
                                <input type="date" class="form-control" name="CourseStartDate" value="@courses.CourseStartDate" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Course End Date</label>
                                <input type="date" class="form-control" name="CourseEndDate" value="@courses.CourseEndDate" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Course Duration (in months)</label>
                                <input type="text" name="CourseDuration" value="@courses.CourseDuration" class="form-control" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Course Language</label>
                                <select class="form-control" name="CourseLanguage" required>
                                    <option value="">-- Select Language --</option>

                                    @if (courses.CourseLanguage == "English")
                                    {
                                        <option value="English" selected>English</option>
                                    }
                                    else
                                    {
                                        <option value="English">English</option>
                                    }

                                    @if (courses.CourseLanguage == "Hindi")
                                    {
                                        <option value="Hindi" selected>Hindi</option>
                                    }
                                    else
                                    {
                                        <option value="Hindi">Hindi</option>
                                    }

                                    @if (courses.CourseLanguage == "Hinglish")
                                    {
                                        <option value="Hinglish" selected>Hinglish</option>
                                    }
                                    else
                                    {
                                        <option value="Hinglish">Hinglish</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Course Image</label>
                                <input type="file" name="cImg" class="form-control">
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
