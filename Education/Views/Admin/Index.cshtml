@model IEnumerable<Education.Models.Admin>

@{
    Layout = "_AdminSidebar";
    ViewData["Title"] = "Index";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["AdminCreateSuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["AdminCreateSuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["AdminCreateErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["AdminCreateErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1 class="mb-4">Admin Panel</h1>

<div class="row g-3">

    <!--modalof new admin start-->
    <div class="col-md-12 d-flex justify-content-between align-items-center">
        <h1>Admins</h1>
   
        <!-- Button to Open Modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAdminModal">
            <i class="bi bi-plus-lg me-2"></i> Create Admin
        </button>

        <!-- Create Admin Modal -->
        <div class="modal fade" id="createAdminModal" tabindex="-1" aria-labelledby="createAdminLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="createAdminLabel">Create New Admin</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <form enctype="multipart/form-data" asp-action="CreateAdmin" asp-controller="Admin" method="post">
                        <div class="modal-body">

                            <div class="row g-3">

                                <!-- Admin Name -->
                                <div class="col-md-6">
                                    <label class="form-label">Admin Name</label>
                                    <input type="text" name="AdminName" class="form-control" required>
                                </div>

                                <!-- DOB -->
                                <div class="col-md-6">
                                    <label class="form-label">Date of Birth</label>
                                    <input type="date" name="AdminDOB" class="form-control" required>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6">
                                    <label class="form-label">Email</label>
                                    <input type="email" name="AdminEmail" class="form-control" required>
                                </div>

                                <!-- Phone -->
                                <div class="col-md-6">
                                    <label class="form-label">Phone</label>
                                    <input type="text" name="AdminPhone" class="form-control" required>
                                </div>

                                <!-- Password -->
                                <div class="col-md-6">
                                    <label class="form-label">Password</label>
                                    <input type="password" name="AdminPassword" class="form-control" required>
                                </div>

                                <!-- Confirm Password -->
                                <div class="col-md-6">
                                    <label class="form-label">Confirm Password</label>
                                    <input type="password" name="ConfirmPassword" class="form-control" required>
                                </div>

                                <!-- Admin Image -->
                                <div class="col-md-12">
                                    <label class="form-label">Admin Image</label>
                                    <input type="file" name="AdminImage" class="form-control" accept="image/*" required>
                                </div>



                            </div>

                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create Admin</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>


  

    <div class="col-md-4">
        <a asp-action="Index" asp-controller="Admin" class="text-decoration-none">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-1">Admin</h5>
                    <h2 class="display-4 mb-0 mt-4">@ViewBag.TotalAdmin</h2>
                    <p class="card-text mb-0"><i class="bi bi-people-fill me-2"></i>Manage Admin</p>
                </div>
            </div>
        </a>
    </div>



    <div class="col-md-4">
        <a asp-action="Students" asp-controller="Admin" class="text-decoration-none text-dark">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Student</h5>
                    <h2 class="display-4 mb-0 mt-4">@ViewBag.TotalStudent</h2>
                    <p class="card-text"><i class="bi bi-people-fill me-2"></i>Manage Student</p>
                </div>
            </div>
        </a>
    </div>


    <div class="col-md-4">
        <a asp-action="Course" asp-controller="Admin" class="text-decoration-none text-dark">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Courses</h5>
                    <h2 class="display-4 mt-4 mb-0">@ViewBag.TotalCourse</h2>
                    <p class="card-text"><i class="bi bi-people-fill me-2"></i>Manage Course</p>
                </div>
            </div>
        </a>
    </div>


</div>

<hr>



<div class="row g-3">
    @foreach (var items in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title mb-4">@items.AdminId</h5>
           
                        <img src="/Admin/AdminSettingImageShow?FileName=@items.AdminImage"
                             class="rounded-circle"
                             style="width: 100px; height: 100px; object-fit: cover;"
                             alt="@items.AdminName">
                    
                    <p class="card-text mt-2 mb-0">@items.AdminName</p>
                    <p class="card-text mt-0 mb-0">@items.AdminEmail</p>
                    <p class="card-text mt-0 mb-0">@items.AdminDOB</p>
                    <p class="card-text mb-5 mt-0">@items.AdminPhone</p>

                    <button type="button" class="btn btn-primary"
                            data-bs-toggle="modal"
                            data-bs-target="#updateModal_@items.AdminId">
                        Update
                    </button>
                    <button type="button" class="btn btn-danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal_@items.AdminId">
                        Delete
                    </button>
                </div>
            </div>
        </div>

        <div class="modal fade" id="updateModal_@items.AdminId" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Update Admin</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="Edit" asp-controller="Admin" method="post" enctype="multipart/form-data">
                        <div class="modal-body">
                            <input type="hidden" name="AdminId" value="@items.AdminId" />

                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" name="AdminName" value="@items.AdminName" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="AdminEmail" value="@items.AdminEmail" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" name="AdminDOB" value="@items.AdminDOB" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Phone</label>
                                <input type="text" class="form-control" name="AdminPhone" value="@items.AdminPhone" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Profile Image</label>
                                <input type="file" class="form-control" name="AdminImage" value="@items.AdminImage">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal_@items.AdminId" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">Confirm Delete</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <form asp-action="DeleteConfirmed" asp-controller="Admin" method="post">
                        <div class="modal-body">
                            <input type="hidden" name="AdminId" value="@items.AdminId" />
                            <p>Are you sure you want to delete <strong>@items.AdminName</strong>?</p>
                            <p class="text-danger">This action cannot be undone!</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    }
</div>
